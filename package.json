{
  "private": false,
  "name": "podcast",
  "description": "Site for podcast",
  "license": "",
  "author": "Kirill Vorobiov",
  "scripts": {
    "build:remix": "remix build",
    "dev:remix": "node -r dotenv/config node_modules/.bin/remix dev",
    "start": "remix-serve build",
    "build:css": "cross-env NODE_ENV=production tailwindcss -i ./styles/tailwind.css -o ./app/styles/app.css --minify",
    "dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/styles/app.css",
    "dev": "concurrently \"npm:dev:*\"",
    "build": "npm run build:css && npm run build:remix",
    "lint": "eslint --ext \".js,.jsx,.ts,.tsx\" --ignore-path .gitignore .",
    "test": "cross-env TEST=true playwright test",
    "postinstall": "remix setup node",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^3.11.1",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@remix-run/server-runtime": "^1.3.3",
    "@supabase/supabase-js": "^1.30.0",
    "clsx": "^1.1.1",
    "daisyui": "^2.6.4",
    "dotenv": "^16.0.0",
    "i18next": "^21.6.14",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.16.1",
    "react-icons": "^4.3.1",
    "react-player": "^2.10.0",
    "react-range": "^1.8.12",
    "remix": "^1.1.3",
    "remix-i18next": "^3.0.0",
    "remix-seo": "^0.1.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@tailwindcss/typography": "^0.5.1",
    "@types/node": "^17.0.17",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.17",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-remix": "^0.0.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.7",
    "prisma": "^3.11.1",
    "tailwindcss": "^3.0.19",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|mjs|ts|tsx|css|md|yml)": [
      "prettier --write"
    ]
  }
}
